{
    "llm": {
        "llm_source": "azure",
        "level": "advanced",
        "temperature": 0,
        "creative_temperature": 0.5,
        "openai_key_dir": ".env",
        "anthropic_key_dir": ".env"
    },
    "embedding": {
        "chunk_size": 500,
        "chunk_overlap": 50
    },
    "retriever": {
        "search_type": "similarity",
        "k": 15
    },
    "sources_retriever": {
        "search_type": "similarity",
        "k": 7
    },
    "languages": {
        "🇺🇸 English": "English",
        "🇨🇳 中文": "Chinese"
    },
    "languages_short": {
        "en": "English",
        "zh": "Chinese"
    },
    "topic_emojis": {
        "introduction": "📖",
        "overview": "🔎",
        "background": "📚",
        "methods": "🔬",
